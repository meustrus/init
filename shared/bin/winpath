#!/bin/sh

if [ -z "$1" ]; then
    printf "Usage: %s \"/c/path/to/transform/to/windows\"\n" "$0" 1>&2
    exit 1
fi

RESULT=$(cd "$(dirname "$1")" && pwd)/$(basename "$1")

if [ ! ${RESULT:2:1} = '/' ]; then
    printf 'Error: "%s" is not part of the Windows filesystem\n' "$RESULT" 1>&2
    exit 1
fi

echo "${RESULT:1:1}:\\$(printf '%s' "${RESULT:3}" | tr '/' '\\')"
